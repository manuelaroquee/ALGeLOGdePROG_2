programa {
  funcao inicio() {
    inteiro numero
    inteiro antecessor
    inteiro sucessor 

    escreva("Digite um número: ")
    leia(numero)

    antecessor = numero - 1
    sucessor = numero + 1

    escreva("O antecessor de " ,numero, " é " ,antecessor, "\n O sucessor de " ,numero, " é " ,sucessor)

  }
}
